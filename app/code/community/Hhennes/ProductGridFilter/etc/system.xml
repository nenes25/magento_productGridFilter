<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <system>
            <groups>
                <hhennes_productgridfilter translate="label,comment" module="hhennes_productgridfilter">
                    <label>ProductGrid Filter</label>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <attributes_to_display translate="label">
                            <label>Select attributes to display in product Grid</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>hhennes_productgridfilter/source_attributes</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Max 3 items</comment>
                        </attributes_to_display>
                    </fields>
                </hhennes_productgridfilter>
            </groups>
        </system>
    </sections>
</config>
